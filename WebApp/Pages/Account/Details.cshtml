@page
@model WebApp.Pages.Account.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background: #011628;
        font-family: 'Poppins';
    }
</style>

<h1 class="text-white">Детайли</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Person.Name)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.Person.Name)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Person.Age)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.Person.Age)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Person.Height)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.Person.Height)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Person.Weight)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.Person.Weight)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Person.Gender)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.Person.Gender)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Person.BirthDate)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.Person.BirthDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" class="btn btn-warning" asp-route-id="@Model.Person?.Id">Edit</a> |
    <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@Model.Person.Id">Delete</a> |
    <a asp-page="Index" class="btn btn-outline-secondary">Go back</a>
</div>
